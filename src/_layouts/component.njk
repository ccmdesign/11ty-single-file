---
layout: docs-layout.njk
---

<div class="component-documentation">
  <header class="component-header">
    <h1>{{ title }}</h1>
    
    {% if description %}
      <p class="component-description">{{ description }}</p>
    {% endif %}
    
    {% if metadata.status %}
      <div class="component-status status-{{ metadata.status | lower }}">
        <span class="status-label">Status:</span> {{ metadata.status }}
      </div>
    {% endif %}
  </header>

  {% if metadata.usage %}
    <section class="component-section">
      <h2>Usage</h2>
      <div class="component-usage">
        {{ metadata.usage | safe }}
      </div>
    </section>
  {% endif %}

  {% if examples %}
    <section class="component-section">
      <h2>Examples</h2>
      
      {% for example in examples %}
        <div class="component-example">
          {% if example.title %}
            <h3>{{ example.title }}</h3>
          {% endif %}
          
          {% if example.description %}
            <p>{{ example.description }}</p>
          {% endif %}
          
          <div class="component-demo">
            <div class="component-demo-preview">
              {{ example.rendered | safe }}
            </div>
            
            {% if example.code %}
              <div class="component-demo-code">
                <pre><code class="language-html">{{ example.code }}</code></pre>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </section>
  {% endif %}

  {% if metadata.props %}
    <section class="component-section">
      <h2>Properties</h2>
      
      <table class="component-props">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {% for prop in metadata.props %}
            <tr>
              <td><code>{{ prop.name }}</code></td>
              <td><code>{{ prop.type }}</code></td>
              <td>{% if prop.default %}<code>{{ prop.default }}</code>{% else %}-{% endif %}</td>
              <td>{{ prop.description }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </section>
  {% endif %}

  {% if metadata.accessibility %}
    <section class="component-section">
      <h2>Accessibility</h2>
      <div class="component-accessibility">
        {{ metadata.accessibility | safe }}
      </div>
    </section>
  {% endif %}

  {% if metadata.guidelines %}
    <section class="component-section">
      <h2>Design Guidelines</h2>
      <div class="component-guidelines">
        {{ metadata.guidelines | safe }}
      </div>
    </section>
  {% endif %}

  {% if metadata.related %}
    <section class="component-section">
      <h2>Related Components</h2>
      <ul class="component-related">
        {% for related in metadata.related %}
          <li><a href="{{ related.url }}">{{ related.title }}</a></li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}
</div>

{% if metadata.scripts %}
  <script>
    {{ metadata.scripts | safe }}
  </script>
{% endif %} 